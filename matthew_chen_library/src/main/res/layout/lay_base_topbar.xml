<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_h">

    <ImageView
        android:id="@+id/ivTopBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnTopL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@mipmap/ic_return"
        android:minWidth="60dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    <View
        android:id="@+id/lineL"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/btnTopL"
        android:background="@color/black_868686"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/top_title_size"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/layBottomR"
        android:layout_toRightOf="@+id/lineL">

        <RelativeLayout
            android:id="@+id/layTopCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layBottomR"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnTopR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:minWidth="60dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvRightTip"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textSize="8sp"
        android:padding="1.5dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_bg_circulartip_red_bg"
        android:minWidth="13dp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/line_h"/>
</RelativeLayout>